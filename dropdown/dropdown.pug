mixin dropdown(items) 
    .dropdown.colorFilter(tabindex='-1')
        button.dropdown__btn(type="button")
            svg(width="10px" height="10px")
                use(xlink:href="#msg-filter")
        ul.dropdown__list
            each item in items
                li.dropdown__item
                    input.dropdown__check(id=`check${item.code}` tabindex='-1' type="checkbox" value=item.code name="codes" checked)
                    label(for=`check${item.code}`)=item.msg